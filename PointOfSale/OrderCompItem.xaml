<UserControl x:Class="PointOfSale.OrderCompItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Title" DockPanel.Dock="Left"/>
        <TextBlock Grid.Column="1" x:Name="PriceBox" DockPanel.Dock="Right" HorizontalAlignment="Right"/>
        <ListBox Grid.Row="1" Grid.ColumnSpan="2" x:Name="Specials"/>
    </Grid>
</UserControl>
