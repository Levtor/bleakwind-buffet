<UserControl x:Class="PointOfSale.EditOrderItemPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <DockPanel>
        <TextBlock Name="headerTextBlock" DockPanel.Dock="Top" FontWeight="Bold" HorizontalAlignment="Center">
            Edit -[insert name of item here]- Order 
        </TextBlock>
        <StackPanel Name="optionsStackPanel">

        </StackPanel>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Name="caloriesTextBlock" VerticalAlignment="Bottom" HorizontalAlignment="Left">Calories: </TextBlock>
            <TextBlock Name="priceTextBlock" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Column="1">Price:</TextBlock>
        </Grid>
    </DockPanel>
</UserControl>
